@model IEnumerable<DatabaseDemo.Character>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/CharacterStyle.css" rel="stylesheet" />
<div class="characterpage">
    <h2>Welcome to the character database!</h2>
    <div class="charbutton">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    </div>
  
    <div class="background_color_box">
        <table class="table">
            <tr class="character_table_headers">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Element_Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Job_Class)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ATK)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DEF)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mana)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HP_Initial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HP_Max)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NPC)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Element_Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Job_Class)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ATK)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DEF)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mana)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HP_Initial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HP_Max)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NPC)
                    </td>
                    <td>
                        <div>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                        </div>
                        <div>
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) 
                        </div>
                        <div>
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>