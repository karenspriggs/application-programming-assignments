@model UserProfileApp.Models.Cars

@{
    ViewBag.Title = "Cars";
}

<script>
    function changeCar2ToBlue() {
        document.getElementById("car2").style.color = "blue";
    }
</script>

<link href="~/Content/Custom.css" rel="stylesheet" />
<script src="~/Content/CarDemo.js"></script>

<div class="car_page">
    <div class="car_box">
        <div>
            <h2 id="car1">@Html.DisplayFor(model => model.Car1Name)</h2>
        </div>
        <div>
            <button onclick="document.getElementById('car1').style.color='red'">Change text</button>
        </div>
    </div>
    <div class="car_box">
        <div>
            <h2 id="car2">@Html.DisplayFor(model => model.Car2Name)</h2>
        </div>
        <div>
            <button onclick="changeCar2ToBlue()">Change text</button>
        </div>
    </div>
    <div class="car_box">
        <div>
            <h2 id="car3">@Html.DisplayFor(model => model.Car3Name)</h2>
        </div>
        <div>
            <button onclick="changeCar3ToBigPurple()">Change text</button>
        </div>
    </div>
</div>
